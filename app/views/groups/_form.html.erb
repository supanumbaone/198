<%= form_for @group, :html => { :multipart => true } do |f| %>
  <%= f.error_messages %>
  <p>
	<%= image_tag(@group.profile_image_url(:thumb)) if @group.profile_image? %><br />
	<%= f.label :profile_image, "Add a picture for the Group: " %>
	<%= f.file_field :profile_image %>
	<%= f.hidden_field :profile_image_cache %><br /><br />
  </p>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
	<%= f.label :interest_list, "Add interests: " %><br />
  	<%= f.text_field :interest_list %>
  </p>
  <p>
    <%= f.label :invited_users %><br />
    <%= f.text_area :invited_users %>
  </p>
  <p>
    <%= f.label :max_members %><br />
    <%= f.text_field :max_members %>
  </p>
  <p>
    <%= f.label :privacy %><br />
    <%= f.text_field :privacy %>
  </p>
  <p><%= f.submit %></p>
<% end %>
