<!-- IMPORTANT: Step 1 of Form -->

<h2>Step 1 > Login Info</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= f.error_messages %>

  <p><%= f.label :email, "UCSD Email" %><br />
  <span class="info">This must be a valid UCSD email address.</span>
  <%= f.text_field :email %></p>

  <p><%= f.label :password, "Choose A Password" %><br />
  <%= f.password_field :password, :autocomplete => :off %></p>

  <p><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></p>

  <p id="form_button"><%= f.submit "Continue to Step 2", :class => "orange_button" %></p>
<% end %>