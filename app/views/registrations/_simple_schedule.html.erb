	<tr id="evening">
		<td>Evening</td>
	  	<td><%= f.check_box :chunk_of_time, {:multiple => true}, "#{Date.today}_evening", nil %></td>
     	<td><%= f.check_box :chunk_of_time, {:multiple => true}, "#{Date.today + 1}_evening", nil %></td>
