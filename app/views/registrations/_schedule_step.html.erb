<!-- Handles rendering whichever type of schedule the user chooses to use in signing up -->

<h2>Last Step  >  When are you free?</h2>

<%= form_for @time_block do |f| %>
	<% if false %>
		<%= render "complex_recurring_schedule", :f => f %>
	<% elsif false %>
		<%= render "simple_schedule", :f => f %>
	<% else %>
		<%= render "conventional_simple_schedule", :f => f %>
	<% end %>

	<p id="form_button"><%= f.submit "Continue", :class => "orange_button" %> or <%= f.submit "Back", :name => "back_button", :class => "back_button" %></p>
	
	<%= hidden_field_tag 'resource', @resource %>
<% end %>
